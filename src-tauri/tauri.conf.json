{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "ThinkSpace",
    "version": "0.9.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPDATA/thinkspace/*",
          "$RESOURCE/*"
        ]
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": [
          "**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.thinkspace.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "agents.json"
      ],
      "externalBin": [],
      "copyright": "",
      "category": "Education",
      "shortDescription": "AI-powered learning built for how your brain works",
      "longDescription": "ThinkSpace helps you learn with AI study guides, visual canvas, and ADHD-optimized features. Where curiosity meets AI."
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "ThinkSpace",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "decorations": true
      }
    ]
  }
}